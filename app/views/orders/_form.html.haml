-# frozen_string_literal: true
= simple_form_for(@order) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :state
    = f.input :price
    = f.input :discount_id
    = f.input :promotion_ids

  .form-actions
    = f.button :submit
